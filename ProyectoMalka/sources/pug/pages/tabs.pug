extends  ../_skeleton

//- Includes
include ../elements/_ui-breadcrumbs

block variables
  - var activeIndex = 3
  - var pageName = 'Tabs'

block page
  // Page header
  include ../sections/_header-default

  +breadcrumbs({
    path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })
  
  section.section-md.bg-default
    .container
      // Bootstrap tabs
      #tabs-1.tabs-custom.tabs-horizontal
        // Nav tabs
        ul.nav-custom.nav-custom-tabs.nav.nav-tabs
          li.nav-item(role='presentation'): a.nav-link.active(href='#tabs-1-1' data-toggle='tab') Responsive
          li.nav-item(role='presentation'): a.nav-link(href='#tabs-1-2' data-toggle='tab') Retina Ready

      .tab-content.text-left
        div#tabs-1-1.tab-pane.fade.show.active
          h5 About Our Restaurant
          p
            | Avenue Restaurant & Bar is a traditional European cuisine venue, serving
            i the best dishes and drinks from across the range of European cuisines.
            | A definitive neighborhood joint in Davis Square, Avenue offers a laid-back dining experience in a casual setting to guests from all walks of life.
            i Honest food and honest drinks set the foundation of our place's menu!
          h5 Details
          ul.list-marked
            li 10 Reasons to Buy Avenue.
            li Getting to another  level of design
            li Clean Style. Cons and Pros.
