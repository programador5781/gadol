  - var pageName = 'Masonry Blog'

block page
  // Page header
  include ../sections/_header-default

  +breadcrumbs({
      path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })
  
  section.section-md
    .container
      .posts-lists-masonry-3-cols
        // Post classic
        article.post-classic.post-minimal
          .post-meta-top
            +label-list({
              list_class: 'list-inline list-label-custom',
              href: postImage,
              items: [
                "Restaurant"]
            })

          .post-classic-title
            h5: a(href=postImage) A perfect place to enjoy

          +jpg('post-minimal-1-418x315')

          .post-meta
            .group
              a(href=postImage): time(datetime='2018') Jan.20, 2018
              a(href=postImage).meta-author by Brian Williamson

          .post-minimal-footer
            a(href=postImage).button.button-gray-light-outline: span read more

        // Post video
        article.post-video.post-minimal
          .post-meta-top
            +label-list({
              list_class: 'list-inline list-label-custom',
              href: postVideo,
              items: [
                "Restaurant"]
            })
          .post-classic-title
            h5: a(href=postVideo) A perfect place to enjoy
          .entry-video.embed-responsive.embed-responsive-16by9
            iframe(width='886', height='668', src=videoSrc, allowfullscreen='')

          .post-meta
            .group
              a(href=postVideo): time(datetime='2018') Jan.20, 2018
              a(href=postVideo).meta-author by Brian Williamson

          .post-minimal-footer
            a(href=postVideo).button.button-gray-light-outline: span read more

        // Post classic
        article.post-classic.post-minimal
