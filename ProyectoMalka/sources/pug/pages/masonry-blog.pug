          .post-meta
            .group
              a(href=postImage): time(datetime='2018') Jan.20, 2018
              a(href=postImage).meta-author by Brian Williamson

          .post-minimal-footer
            a(href=postImage).button.button-gray-light-outline: span read more


        // Post quote
        article.post-quote.post-minimal
          .post-meta-top
            +label-list({
              list_class: 'list-inline list-label-custom',
              href: postQuote,
              items: [
                "Restaurant"]
            })
          // Quote default
          .quote-default.quote-default_left.quote-default__border-left
            .quote-default__text: p.q.heading-4 Born in Brooklyn in 1960, Albert worked in restaurants and as a caterer ...
            p.quote-default__cite Adam Smith
            
          .post-meta
            .group
              a(href=postQuote): time(datetime='2018') Jan.20, 2018
              a(href=postQuote).meta-author by Brian Williamson
