extends  ../_skeleton

//- Includes
include ../elements/_ui-rd-video
include ../elements/_ui-list-inline-icon
include ../elements/_ui-parallax

block variables
	- var activeIndex = 0
	- var footerLink = true
	- var pageName = 'Home Default'

block page
	// Page header
	include ../sections/_header-transparent

	section.section-first-screen.text-center
		+rd-parallax({
			"backgroundSpeed": "0.35",
			"attrType": "media",
			"src": "images/index-parallax-1-1920x1080.jpg",
			"htmlSpeed": "0.1",
			"class": 'parallax-header rd-parallax-light parallax-overlay'
		})
			.parallax-header__inner: .parallax-header__content
				.section-xxl: .container
					.row.justify-content-sm-center
						.col-md-10.col-xl-8
							h1(style='overflow: hidden;')
								span.wow.fadeInUpSmall(data-wow-delay='2s') Welcome to
							.brand-name.view-animate
								svg(viewbox='0 0 550 180' text-anchor="middle")
									text( x="50%" y="75%") <tspan>A</tspan>venue

							ul(style='overflow: hidden;')
								li.font-italic.wow.fadeInDownSmall(data-wow-delay='2s')
									| Alexandria, 32 Washington str, 22303

								li.font-italic.wow.fadeInDownSmall(data-wow-delay='2.2s')
									dl.list-terms-minimal
										dt Opening hours
										dd Mo-Fr 11:00-00:00, Sa-Sa 15:00-00:00

								li.wow.fadeInDownSmall(data-wow-delay='2.4s')
									dl.list-terms-minimal
										dt Call
										dd: a(href='tel:#') (555)123-4567
							hr.divider-minimal.wow.fadeInDownSmall(data-wow-delay='2.6s')

	section.section-xl.bg-default
		.container-fluid.container-limit
			.row.row-50.justify-content-sm-center.align-items-xxl-center
				.col-lg-6
					.row.justify-content-center.justify-content-lg-end
						.col-11.col-xl-9
							h1 The Avenue #[br] Restaurant
							h5 The perfect place to enjoy the life and food.
							hr.divider-minimal.divider__left
							p
								| Avenue Restaurant & Bar is a traditional European cuisine venue, serving&nbsp
								i the best dishes and drinks from across the range of European cuisines.&nbsp
								| A definitive neighborhood joint in Davis Square, Avenue offers a laid-back dining experience in a casual setting to guests from all walks of life.&nbsp
								i Honest food and honest drinks set the foundation of our place's menu!

				.col-lg-6
					.row
						.col-xl-6
							.row.row-50
								.col-md-6.col-lg-12
									figure
										+jpg('index-1-433x315')
								.col-md-6.col-lg-12
									figure
										+jpg('index-2-433x313')
						.col-xl-6.d-none.d-xl-block
							figure
								+jpg('index-3-453x700')


	section.section-xl.bg-default
		.container
			h1 Our Standards
			.row.row-xl.justify-content-sm-center.row-70
				.col-md-6.col-lg-4
					hr.divider-minimal.divider__left
					h4 Casually European
					p With our menu being centered around the casual European dishes, we have both Greek, French and Italian food...
				.col-md-6.col-lg-4
					hr.divider-minimal.divider__left
					h4 American Comfort
					p Despite being a European restaurant, visiting our place feels just as casual as any traditional American restaurant would feel...
				.col-md-6.col-lg-4
					hr.divider-minimal.divider__left
					h4 Event-friendly
					p If you're considering celebrating a personal or a business occasion at our restaurant, all of our 3 big dining halls will be ready for you!


	section.text-center
		+rd-parallax({
			"backgroundSpeed": "0.35",
			"attrType": "media",
			"src": "images/index-parallax-2-1920x1080.jpg",
			"htmlSpeed": "0.1",
			"class": 'parallax-header rd-parallax-light parallax-overlay'
		})
			.parallax-header__inner: .parallax-header__content
				.container-fluid
					.row.no-gutters.align-items-lg-center.flex-lg-row-reverse
						.col-lg-12.section-sm
							.row.justify-content-center
								.col-11.col-md-6.col-xl-5
									h1 Founded in 1982
									h5 Avenue is proud to be serving fine European dishes for more then 30 years!
									hr.divider-minimal
	='\n'

	// menu
