				//2 row
				.col-md-6.col-lg-4
					.thumbnail-classic
						figure.figure-main-menu
							+jpg('index-8-418x315')
						.label-main-menu
							| Chef’s
							| Special
						.caption
							.menu-inner.menu-inner__heading
								a(href='single-product.html') Blue Cheese Burger
								span.menu-inner-price 5.45
