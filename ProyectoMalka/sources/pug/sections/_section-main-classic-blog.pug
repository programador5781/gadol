// Post classic
.section-sm
  article.post-classic
    .post-meta-top
      +label-list({
        list_class: 'list-inline list-label-custom',
        href: postImage,
        items: [
          "Restaurant"]
      })
    .post-classic-title
      h4: a(href=postImage) A perfect place to enjoy
    +jpg('post-classic-1-886x668')

    .post-classic-body
      p 
        | Avenue Restaurant & Bar is a traditional European cuisine venue, serving
        i the best dishes and drinks from across the range of European cuisines. 
        | A definitive neighborhood joint in Davis Square, Avenue offers a laid-back dining experience in a casual setting to guests from all walks of life.
        i Honest food and honest drinks set the foundation of our place's menu!

    .post-meta
      .group
        a(href=postImage): time(datetime='2018') Jan.20, 2018
        a(href=postImage).meta-author by Brian Williamson
        a(href=postImage) 3 comment(s)

        +tag-list({
            list_class: 'list-inline-tag',
            href: postImage,
            items: [
                "Style",
                'Clean']
        })

    .post-classic-footer
      +list-inline-icon({
          list_class: 'list-inline-sm',
          items: [
              "icon-sm fa-facebook",
              'icon-sm fa-twitter',
              'icon-sm fa-google-plus',
              'icon-sm fa-vimeo',
              'icon-sm fa-youtube',
              'icon-sm fa-pinterest-p']
      })

      a(href=postImage).button.button-gray-light-outline: span Read more

